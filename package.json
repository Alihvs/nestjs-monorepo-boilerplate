{
    "name": "zolf-backend",
    "version": "0.0.1-alpha",
    "description": "Monorepo Microservices for Zolf",
    "author": "Ali Havasi",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "npm-run-all -s api:build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "dev": "npm-run-all -p api:start:dev",
        "dev:debug": "npm-run-all -p processor:start:debug api:start:debug socket:start:debug",
        "release:production": "npm-run-all -s api:release",
        "release:stage": "npm-run-all -s api:release:stage",
        "postrelease:stage": "git push --follow-tags origin dev",
        "api:build": "nest build api",
        "api:start": "nest start api",
        "api:start:dev": "nest start api --watch",
        "api:start:debug": "nest start api --debug --watch",
        "api:release": "standard-version -t @app/api\\@ `./check-version.sh`",
        "api:release:stage": "standard-version -t @app/api\\@ --prerelease alpha `./check-version.sh stage`",
        "lint": "eslint \"{apps,libs,test,shared}/**/*.ts\" --fix",
        "commit": "git-cz",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.3",
        "@nestjs/config": "^0.6.1",
        "@nestjs/core": "^7.0.3",
        "@nestjs/mongoose": "^7.0.2",
        "@nestjs/passport": "^7.0.0",
        "@nestjs/platform-express": "^7.0.3",
        "@nestjs/swagger": "^4.5.3",
        "@nestjs/terminus": "^7.0.0",
        "bcrypt": "^5.0.0",
        "chalk": "^4.1.0",
        "dotenv": "^8.2.0",
        "helmet": "^4.2.0",
        "joi": "^17.3.0",
        "lodash": "^4.17.15",
        "mongoose": "^5.8.9",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "redis": "^3.0.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "swagger-ui-express": "^4.1.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@nestjs/cli": "^7.5.1",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.3",
        "@types/jest": "26.0.23",
        "@types/lodash": "^4.14.165",
        "@types/mongoose": "^5.7.8",
        "@types/node": "^15.0.1",
        "@types/passport": "^1.0.2",
        "@types/passport-jwt": "^3.0.3",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "4.22.0",
        "@typescript-eslint/parser": "4.22.0",
        "eslint": "7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.20.1",
        "git-cz": "^4.6.2",
        "husky": "^6.0.0",
        "jest": "26.6.3",
        "jest-mock-extended": "^1.0.10",
        "lint-staged": "^10.2.11",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "standard-version": "^9.0.0",
        "supertest": "^6.0.1",
        "ts-jest": "26.5.5",
        "ts-loader": "^9.1.1",
        "ts-node": "9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.3"
    },
    "lint-staged": {
        "*.{ts,js}": "eslint --fix"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/"
        ],
        "moduleNameMapper": {
            "@shared/(.*)": "<rootDir>/shared/$1",
            "@components/(.*)": "<rootDir>/components/$1",
            "apps/(.*)": "<rootDir>/apps/$1"
        }
    }
}
