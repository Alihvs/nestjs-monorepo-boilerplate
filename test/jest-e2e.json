{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "roots": [
    ".",
    "src"
  ],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@lib/customer/(.*)": "<rootDir>/../libs/customer/src/$1",
    "@lib/customer": "<rootDir>/../libs/customer/src"
  }
}